@model AI_Cooking_Guide_Website.Models.RecipeModel

<section class="py-3 py-md-5 py-xl-10 bsb-section-py-xxl-1 bg-accent">
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-12">
                <h2 class="display-4 fw-bold mb-4 text-center text-accent-emphasis">@Model.Title</h2>
                <img class="img-fluid" src="@Model.ImageUrl" alt="@Model.Title" />
                <h3 class="mt-4">Nguyên liệu:</h3>
                <ul>
                    @foreach (var ingredient in Model.Ingredients)
                    {
                        <li>@ingredient</li>
                    }
                </ul>
                <h3 class="mt-4">Hướng dẫn:</h3>
                <p>@Model.Instructions</p>
            </div>
        </div>
    </div>
</section>
