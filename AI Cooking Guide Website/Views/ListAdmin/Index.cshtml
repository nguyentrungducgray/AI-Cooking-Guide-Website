@model List<AI_Cooking_Guide_Website.Models.AddModel.Recipe>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<body>
    <!-- MAIN -->
    <main>
        <div class="head-title">
            <div class="left">
                <h1>Add Food</h1>
                <ul class="breadcrumb">
                    <li>
                        <a href="@Url.Action("Index", "Dashboard")">Dashboard</a>
                    </li>
                    <li><i class='bx bx-chevron-right'></i></li>
                    <li>
                        <a class="active" href="#">Add Food</a>
                    </li>
                </ul>
            </div>
            <a href="@Url.Action("Add", "Admin")" class="btn-add">
                <i class='bx bx-plus-circle'></i>
                <span class="text">Add New Food</span>
            </a>
        </div>

        <!-- TABLE -->
        <div class="table-container">
            <table class="styled-table">
                <thead>
                    <tr>
                        <th>Serial Number</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null )
                    {
                        //int serialNumber = 1;
                        foreach (var recipe in Model)
                        {
                            <tr>
                               @* <td>@serialNumber</td>  *@
                                <td>
                                    <img src="@recipe.Image" alt="@recipe.Name" class="food-image" style="width: 100px; height: auto;" />
                                </td>
                                <td>@recipe.Name</td>
                                <td>
                                    <a href="@Url.Action("Index", "EditAdminList" @* new { id = serialNumber } *@)" class="btn btn-edit">
                                        <i class='bx bx-edit-alt'></i>Edit
                                    </a>
                                    <a href="@Url.Action("Delete", "Admin" @* new { id = serialNumber } *@)" class="btn btn-delete">
                                        <i class='bx bx-trash'></i>Delete
                                    </a>
                                </td>
                            </tr>
                            @* serialNumber++; *@
                        }

                    }
                    else
                    {
                        <tr>
                            <td colspan="3">No recipes found.</td>
                        </tr>
                    }
                   
                </tbody>
            </table>
        </div>
        <!-- TABLE -->
    </main>
</body>
