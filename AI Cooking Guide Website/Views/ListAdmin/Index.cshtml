@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Boxicons -->
    <link href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css" rel="stylesheet">
    <!-- My CSS -->
    <link href="~/css/admin.css" rel="stylesheet" />
    <link href="~/css/listadmin.css" rel="stylesheet" />
    <title>AdminHub</title>
</head>
<body>

    <!-- SIDEBAR -->
    <section id="sidebar">
        <a href="#" class="brand">
            <img src="~/img/logo/logo.png" alt="Logo AdminHub" class="icon" />
            <span class="text">Michelin Btec</span>
        </a>

        <ul class="side-menu top">
            <li class="active">
                <a href="@Url.Action("Index", "Admin")">
                    <i class='bx bxs-dashboard'></i>
                    <span class="text">Add Food</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "ListAdmin")">
                    <i class='bx bxs-group'></i>
                    <span class="text">List Food</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Analytics")">
                    <i class='bx bxs-doughnut-chart'></i>
                    <span class="text">Analytics</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Messages")">
                    <i class='bx bxs-message-dots'></i>
                    <span class="text">Messages</span>
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Team")">
                    <i class='bx bxs-group'></i>
                    <span class="text">Team</span>
                </a>
            </li>
        </ul>
    </section>
    <!-- SIDEBAR -->
    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <i class='bx bx-menu'></i>
            <a href="#" class="nav-link">Categories</a>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Search...">
                    <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
                </div>
            </form>
            <input type="checkbox" id="switch-mode" hidden>

            <a href="#" class="notification">
                <i class='bx bxs-bell'></i>
                <span class="num">8</span>
            </a>
            <a href="#" class="profile">
                <img src="<%= ResolveUrl(" ~ /img/people.png") %>" alt="User Profile">
            </a>
        </nav>
        <!-- NAVBAR -->
        <!-- MAIN -->
        <main>
            <div class="head-title">
                <div class="left">
                    <h1>Dashboard</h1>
                    <ul class="breadcrumb">
                        <li>
                            <a href="#">Add Food</a>
                        </li>
                        <li><i class='bx bx-chevron-right'></i></li>
                        <li>
                            <a class="active" href="#">Add</a>
                        </li>
                    </ul>
                </div>
                <a href="#" class="btn-download">
                    <i class='bx bxs-cloud-download'></i>
                    <span class="text">Download PDF</span>
                </a>
            </div>

            <!-- TABLE -->
            <div class="table-container">
                <table>
                    <thead>
                        <tr>
                            <th>Serial Number</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>001</td>
                            <td><img src="~/img/food1.png" alt="Food 1" class="food-image"></td>
                            <td>Food Item 1</td>
                            <td>
                                <a href="@Url.Action("Index", "EditAdminList", new { id = 1 })" class="btn-edit">Edit</a>
                                <a href="@Url.Action("Delete", "Admin", new { id = 1 })" class="btn-delete">Delete</a>
                            </td>
                        </tr>
                        <tr>
                            <td>002</td>
                            <td><img src="~/img/food2.png" alt="Food 2" class="food-image"></td>
                            <td>Food Item 2</td>
                            <td>
                                <a href="@Url.Action("Index", "EditAdminList", new { id = 2 })" class="btn-edit">Edit</a>
                                <a href="@Url.Action("Delete", "Admin", new { id = 2 })" class="btn-delete">Delete</a>
                            </td>
                        </tr>
                    </tbody>

                </table>
            </div>
            <!-- TABLE -->
        </main>

        </main>
        <!-- MAIN -->
    </section>
    <!-- CONTENT -->

    <script src="~/js/admin.js"></script>
</body>
</html>