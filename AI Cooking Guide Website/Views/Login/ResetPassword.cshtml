@model AI_Cooking_Guide_Website.Models.ResetPasswordModel

@{
    ViewData["Title"] = "Đặt lại mật khẩu";
    Layout = null; // Nếu bạn muốn không sử dụng layout nào khác
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Mama Kitchen</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/assets/css/bootstrap-datetimepicker.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/assets/css/ckeditor.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/assets/css/feather.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/assets/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/School.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/09a5fdf6ba.js" crossorigin="anonymous"></script>
</head>
<body>

    <div class="main-wrapper login-body">
        <div class="login-wrapper">
            <div class="container">
                <div class="loginbox">
                    <div class="login-left">
                        <img class="img-fluid full-width" src="~/img/hoc-nau-an.jpg" alt="Logo" style="object-fit: cover; width: 100%; height: 100%;">
                    </div>
                    <div class="login-right">
                        <div class="login-right-wrap">
                            <h1>Đặt lại mật khẩu</h1>
                            <p class="account-subtitle">Nhập thông tin để đặt lại mật khẩu của bạn</p>

                            <form asp-controller="Login" asp-action="ResetPassword" method="post">
                                <input type="hidden" asp-for="Email" />
                                <input type="hidden" asp-for="Token" />

                                <div class="form-group">
                                    <label for="NewPassword" class="control-label">Mật khẩu mới</label>
                                    <input type="password" class="form-control" id="NewPassword" asp-for="NewPassword" required placeholder="Mật khẩu mới" />
                                </div>
                                <div class="form-group">
                                    <label for="ConfirmPassword" class="control-label">Xác nhận mật khẩu</label>
                                    <input type="password" class="form-control" id="ConfirmPassword" asp-for="ConfirmPassword" required placeholder="Xác nhận mật khẩu" />
                                </div>

                                <div class="form-group mb-0">
                                    <button class="btn btn-primary btn-block" type="submit">Đặt lại mật khẩu</button>
                                </div>
                            </form>

                            @if (ViewBag.Message != null)
                            {
                                <div class="alert alert-success">@ViewBag.Message</div>
                            }

                            <div class="dont-have">
                                Đã có tài khoản? <a asp-controller="Login" asp-action="Login">Đăng Nhập</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/assets/js/jquery-3.6.0.min.js"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/feather.min.js"></script>
    <script src="~/assets/js/script.js"></script>
</body>
</html>
