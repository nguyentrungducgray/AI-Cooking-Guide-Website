<!DOCTYPE html>
<html lang="vi">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- Boxicons -->
	<link href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css" rel="stylesheet">
	<!-- My CSS -->
	<link href="~/css/admin.css" rel="stylesheet" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link href="~/css/editadminlist.css" rel="stylesheet" />
	<link href="~/css/listadmin.css" rel="stylesheet" />
	<linkrel ="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-Awesome/4.6.3/css/font-Awesome.min.css" />
	<link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" />

	<title>AdminHub</title>
</head>
<body>
	<!-- THANH BÊN -->
	<section id="sidebar">
		<a href="#" class="brand">
			<img src="~/img/logo/logo.png" alt="Logo AdminHub" class="icon" />
			<span class="text">Michelin Btec</span>
		</a>
		
		<ul class="side-menu top">
			<li class="@((ViewContext.RouteData.Values["controller"]?.ToString() == "Admin" && ViewContext.RouteData.Values["action"]?.ToString() == "Index") ? "active" : "")">
				<a asp-controller="Admin" asp-action="Index">
					<i class='bx bxs-dashboard'></i>
					<span class="text">Thêm món ăn</span>
				</a>
			</li>

			<li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "ListAdmin" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
				<a asp-controller="ListAdmin" asp-action="Index">
					<i class='bx bxs-shopping-bag-alt'></i>
					<span class="text">Danh sách món ăn</span>
				</a>
			</li>

			<li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Accept" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
				<a asp-controller="Accept" asp-action="Index">
					<i class='bx bxs-doughnut-chart'></i>
					<span class="text">Quản lí công thức</span>
				</a>
			</li>
			<li class="@((ViewContext.RouteData.Values["controller"]?.ToString() == "Messenger") && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
				<a asp-controller="Messenger" asp-action="Index">
					<i class='bx bxs-message-dots'></i>
					<span class="text">Hộp thư</span>
				</a>
			</li>
			
		</ul>

	</section>
	<!-- THANH BÊN -->
	<!-- NỘI DUNG -->
	<section id="content">
		<!-- THANH ĐIỀU HƯỚNG -->
		<nav>
			
			<form action="#">
				<div class="form-input">
					<input type="search" placeholder="Tìm kiếm...">
					<button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
				</div>
			</form>
			<input type="checkbox" id="switch-mode" hidden>

			<a href="#" class="notification">
				<i class='bx bxs-bell'></i>
				<span class="num">8</span>
			</a>
			<a href="#" class="profile">
				<li class="nav-item">
					@if (User.Identity.IsAuthenticated)
					{
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
							<img src="@User.FindFirst("AvatarUrl")?.Value" alt="Ảnh đại diện" class="rounded-circle" style="width: 30px; height: 30px; object-fit: cover;">
								@User.Identity.Name
						</a>
						<ul class="dropdown-menu dropdown-menu-end">
							<li><a class="dropdown-item" asp-controller="Profile" asp-action="Profile">Hồ sơ cá nhân</a></li>
							<li><a class="dropdown-item" asp-controller="Login" asp-action="Logout">Đăng xuất</a></li>
						</ul>
					</li>
					}
					else
					{
					<li class="nav-item">
						<a class="nav-link" asp-controller="Login" asp-action="Login">Đăng kí/Đăng nhập</a>
					</li>
					}
				</li>
			</a>
		</nav>
		<!-- THANH ĐIỀU HƯỚNG -->
		<div class="container">
			<main role="main" class="pb-3">
				@RenderBody()
			</main>
		</div>
	</section>

	<script src="~/js/admin.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/loading.js"></script>
</body>
</html>
